<div class="main-container">
  <div class="secondary-container">
    <h1><%= @artist.nickname %></h1>
    <p><%= @artist.speciality %></p>
    <div class="profile-content">

      <% if @artist.profile_pic.attached? %>
        <%= cl_image_tag @artist.profile_pic.key, class:"profile-picture align-left slide-in", id:"odahil-profile-pic"%>
      <% else %>
        <%= image_tag "app/assets/images/profile_placeholder.jpg", class:"profile-picture align-left slide-in", id:"odahil-profile-pic"%>
      <% end %>

      <div class="profile-content-text">
        <h2>
        <%= @artist.description %>
        <hr>
        <span><%= @artist.nickname %><span>
        </h2>
      </div>
    </div>
  </div>
  <div class="appoinement-container">
    <%= simple_form_for [@artist, @appointment] do |f| %>
      <%= f.input :date, as: :string %>
      <%= f.input :comment %>
      <%= f.input :category, collection: Appointment.categories %>
      <%= f.button :submit, class:'btn btn-secondary' %>
    <% end %>
  </div>
</div>
