<div id="navbar-small-screen">
  <%= render 'shared/logo' %>

  <a href="#navigation" class="nav-trigger">
    <span></span>
  </a>

<nav class="nav-container" id="navigation">
  <div class="sign-in-link">
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <i class="fas fa-sign-in-alt"></i>
        <% end %>
      <% end %>
    </div>

  <ul class="nav">
  <% unless controller_name == 'pages' && action_name == 'home' %>
    <li><%= link_to 'Accueil', home_path, class:'link-line' %></li>
  <% end %>
  <% unless controller_name == 'artists' && action_name == 'index' %>
    <li><%= link_to 'Artistes', '#', class:'link-line', id:'artist-link' %></li>
  <% end %>
  <% unless controller_name == 'artists' && action_name == 'index' %>
    <% User.artists.each do |artist| %>
      <li><%= link_to artist.name, artist_path(artist.id), class:'link-line link-line-artist hidden' %></li>
    <% end %>
  <% end %>
  <% unless controller_name == 'pages' && action_name == 'shop' %>
    <li><%= link_to 'Shop', '#', class:'link-line' %></li>
  <% end %>
  <% unless controller_name == 'articles' && action_name == 'index' %>
    <li><%= link_to 'Boutique', "#", class:'link-line' %></li>
  <% end %>
  <% unless controller_name == 'flashes' && action_name == 'index' %>
    <li><%= link_to 'Flash', flashes_path, class:'link-line' %></li>
  <% end %>
    <% if user_signed_in? %>
      <li><%= link_to 'Messages', '#', class:"link-line" %></li>
      <li><%= link_to 'Admin', "/admin", class:"link-line" %></li>
    <% end %>
  </ul>
</nav>

<div class="overlay"></div> <!-- improve main element 3d movement -->
</div>
